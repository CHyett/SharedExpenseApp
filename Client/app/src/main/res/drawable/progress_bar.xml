<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="@color/colorPrimary"/>
            <stroke android:color="@color/colorSecondary" android:width="@dimen/register_fragment_progress_bar_outer_padding" />
        </shape>
    </item>

    <item android:id="@android:id/progress"
        android:top="@dimen/register_fragment_progress_bar_outer_padding"
        android:bottom="@dimen/register_fragment_progress_bar_outer_padding"
        android:right="@dimen/register_fragment_progress_bar_outer_padding"
        android:left="@dimen/register_fragment_progress_bar_outer_padding">
        <clip>
            <scale android:scaleWidth="100%" >
                <shape>
                    <corners android:radius="@dimen/register_fragment_progress_bar_corners"/>
                    <solid android:color="@color/colorSecondary"/>
                </shape>
            </scale>
        </clip>
    </item>

</layer-list>