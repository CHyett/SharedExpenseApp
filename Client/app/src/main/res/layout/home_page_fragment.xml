<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewmodel"
            type="com.example.sharedexpenseapp.homepage.HomePageViewModel" />
    </data>

    <com.discord.panels.OverlappingPanelsLayout
        android:id="@+id/home_page_fragment_overlapping_panels"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/home_page_fragment_start_panel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start">


        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_page_fragment_center_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_page_fragment_center_panel_constraint_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/home_screen_bg">

                <RelativeLayout
                    android:id="@+id/home_page_fragment_center_panel_top_nav_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/home_page_fragment_settings_icon"
                        android:layout_width="@dimen/home_fragment_top_nav_imageview"
                        android:layout_height="@dimen/home_fragment_top_nav_imageview"
                        android:paddingLeft="@dimen/home_fragment_top_nav_imageview_padding"
                        android:paddingTop="@dimen/home_fragment_top_nav_imageview_padding"
                        android:src="@drawable/gear" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/home_page_fragment_hamburger_icon"
                        android:layout_width="@dimen/home_fragment_top_nav_imageview"
                        android:layout_height="@dimen/home_fragment_top_nav_imageview"
                        android:layout_alignParentRight="true"
                        android:paddingTop="@dimen/home_fragment_top_nav_imageview_padding"
                        android:paddingRight="@dimen/home_fragment_top_nav_imageview_padding"
                        android:scaleType="centerCrop"
                        app:lottie_rawRes="@raw/menu_animation"/>

                    <!-- <ImageView
                        android:id="@+id/home_page_fragment_hamburger_icon"
                        android:layout_width="@dimen/home_fragment_top_nav_imageview"
                        android:layout_height="@dimen/home_fragment_top_nav_imageview"
                        android:layout_alignParentRight="true"
                        android:paddingTop="@dimen/home_fragment_top_nav_imageview_padding"
                        android:paddingRight="@dimen/home_fragment_top_nav_imageview_padding"
                        android:src="@drawable/gear" /> -->

                </RelativeLayout>

                <TextView
                    android:id="@+id/home_page_fragment_welcome_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/home_fragment_welcome_message_margin_top"
                    android:text="Good evening,\nScotty P"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/home_fragment_welcome_message_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_page_fragment_center_panel_top_nav_bar" />

                <TextView
                    android:id="@+id/home_page_fragment_expenses_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/home_fragment_expenses_message_margin_top"
                    android:text="@string/home_fragment_expenses_message"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/home_fragment_expenses_message_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_page_fragment_welcome_message" />

                <FrameLayout
                    android:id="@+id/home_page_fragment_overall_expenses_background"
                    android:layout_width="@dimen/home_fragment_overall_expenses"
                    android:layout_height="@dimen/home_fragment_overall_expenses"
                    android:layout_marginTop="@dimen/home_fragment_overall_expenses_background_margin_top"
                    android:background="@drawable/home_fragment_overall_expenses"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_page_fragment_expenses_message">

                    <TextView
                        android:id="@+id/home_page_fragment_overall_expenses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$420.69"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/home_fragment_overall_expenses_text"
                        android:layout_gravity="center"
                        android:fontFamily="@font/walkway_oblique_semibold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/home_page_fragment_expenses_message" />

                </FrameLayout>

                <RadioGroup
                    android:id="@+id/toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:background="@drawable/home_fragment_dual_button_outline"
                    android:checkedButton="@+id/off"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/home_page_fragment_overall_expenses_background">

                    <RadioButton
                        android:id="@+id/off"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/home_fragment_expenses_button"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="@dimen/fab_margin"
                        android:text="Expenses"
                        android:textColor="@drawable/home_fragment_switch_text_dual_button" />

                    <RadioButton
                        android:id="@+id/on"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="1dp"
                        android:layout_weight="1"
                        android:background="@drawable/home_fragment_charges_button"
                        android:button="@null"
                        android:gravity="center"
                        android:padding="@dimen/fab_margin"
                        android:text="on"
                        android:textColor="@drawable/home_fragment_switch_text_dual_button" />
                </RadioGroup>

                <ImageView
                    android:id="@+id/home_fragment_horizontal_rule"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/home_fragment_horizontal_rule_height"
                    android:src="@drawable/home_fragment_horizontal_rule"
                    android:layout_marginRight="@dimen/home_fragment_horizontal_rule_margin"
                    android:layout_marginLeft="@dimen/home_fragment_horizontal_rule_margin"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/toggle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_page_fragment_end_panel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end">


        </FrameLayout>

    </com.discord.panels.OverlappingPanelsLayout>

</layout>

