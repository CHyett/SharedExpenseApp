<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="viewmodel" type="com.example.sharedexpenseapp.HomePageViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/profile_picture_cardview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_fragment_imageview_margin_top"
            app:cardCornerRadius="@dimen/home_fragment_profile_picture_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/home_fragment_profile_picture"
                android:layout_width="@dimen/home_fragment_imageview_dimens"
                android:layout_height="@dimen/home_fragment_imageview_dimens"
                android:contentDescription="@string/home_fragment_image_description"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_fragment_pay_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_fragment_pay_button"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/home_fragment_create_group_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.575" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_fragment_charge_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_fragment_charge_button"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/home_fragment_create_group_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.575" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_fragment_create_group_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_fragment_create_group_button"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/home_fragment_charge_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/home_fragment_pay_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.575" />

        <EditText
            android:id="@+id/home_fragment_create_group_edittext"
            style="@style/AppTheme.EditText"
            android:layout_width="@dimen/home_fragment_edittetext_width"
            android:layout_height="@dimen/home_fragment_edittetext_height"
            android:layout_marginTop="@dimen/home_fragment_group_name_form_margin_top"
            android:hint="@string/home_fragment_create_group_edittext_hint"
            android:visibility="@{viewmodel.showGroupNameForm$app_debug}"
            android:text="@={viewmodel.liveGroupName$app_debug}"
            android:autofillHints="@string/home_fragment_create_group_name_edittext_autofill"
            android:inputType="text"
            app:layout_constraintEnd_toStartOf="@+id/home_fragment_submit_group_name_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/home_fragment_create_group_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_fragment_submit_group_name_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_fragment_group_name_form_margin_top"
            android:text="@string/home_fragment_submit_group_name_button"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:visibility="@{viewmodel.showGroupNameForm$app_debug}"
            android:clickable="@{viewmodel.liveIsClickable$app_debug}"
            app:isEnabled="@{viewmodel.liveIsClickable$app_debug}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/home_fragment_create_group_edittext"
            app:layout_constraintTop_toBottomOf="@+id/home_fragment_create_group_button" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/home_fragment_log_out_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_fragment_log_out"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_marginBottom="@dimen/home_fragment_log_out_button_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>